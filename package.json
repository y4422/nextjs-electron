{
  "name": "nextjs-electron",
  "version": "1.0.0",
  "description": "Electron + Next.js 電卓アプリ",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently -n \"NEXT,ELECTRON\" -c \"yellow,blue\" --kill-others \"next dev\" \"electron .\"",
    "build": "next build && electron-builder",
    "start": "next start",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "com.example.nextjs-electron",
    "productName": "Calculator App",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "**/*",
      "!**/.vscode/*",
      "!**/.git/*",
      "!**/node_modules/*"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "dist"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@tailwindcss/postcss7-compat": "^2.2.17",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron-serve": "^2.1.1",
    "next": "^13.4.19",
    "postcss": "^8.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.0"
  },
  "devDependencies": {
    "electron": "^22.3.27",
    "electron-builder": "^26.0.12",
    "wait-on": "^8.0.3"
  }
}
